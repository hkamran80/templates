% Arrow
\newcommand{\oa}[1]{\overrightarrow{#1}}

% Overline
\newcommand{\ol}[1]{\overline{#1}}

% Wide hat
\newcommand{\wh}[1]{\widehat{#1}}

% Wide tilde
\newcommand{\wt}[1]{\widetilde{#1}}

